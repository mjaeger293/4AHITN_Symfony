{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div>
    {% for product in cart.products %}
        <div>
            <h2>{{ product.amount }}x {{ product.product.name }}</h2>
            <div>
                <a href="{{ path('single_product', {id: product.product.id}) }}">
                    Artikelnummer: {{ product.product.articleNr }}
                </a>
            </div>
            <strong>{{ product.product.price }}</strong><br />
        </div>
    {% endfor %}
    {% if cartservice.getNumProducts > 0 %}
        <br />
        Gesamtpreis: <strong>{{ totalprice }}</strong><br />
        <a href="{{ path('cart_order') }}">Bestellen</a>
    {% endif %}
</div>
{% endblock %}
